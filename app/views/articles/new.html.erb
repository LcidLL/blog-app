<h1>New Article</h1>

<div class="form-container">
  <%= form_with model: @article do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title %>
      <% @article.errors.full_messages_for(:title).each do |message| %>
        <div class="error-message"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :body %>
      <%= form.text_area :body %>
      <% @article.errors.full_messages_for(:body).each do |message| %>
        <div class="error-message"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :status %>
      <%= form.select :status, Visible::VALID_STATUSES, { selected: 'public' }, { prompt: 'Select status' } %>
      <% @article.errors.full_messages_for(:status).each do |message| %>
        <div class="error-message"><%= message %></div>
      <% end %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>